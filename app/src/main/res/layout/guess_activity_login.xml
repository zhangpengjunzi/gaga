<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_image_login"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/login_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="88%">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom|center"
            android:orientation="vertical"
            app:layout_heightPercent="30%">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/guess_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录后方可参与竞猜题目"
                android:textStyle="normal"
                android:textColor="@color/white"
                app:layout_marginTopPercent="12%"
                app:layout_textSizePercent="4.5%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="70%">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13dp"
                            android:src="@mipmap/mine_login" />

                        <com.sinocall.guess.view.MyEditText
                            android:id="@+id/user_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入手机号"
                            android:inputType="number"
                            android:maxLength="11"
                            android:paddingRight="15dp"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@drawable/guess_login_cursor"
                            android:textSize="14sp" />
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/white"></View>
                </LinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_marginTopPercent="5%"
                    app:layout_widthPercent="70%">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="13dp"
                                android:src="@mipmap/code_login" />

                            <com.sinocall.guess.view.MyEditText
                                android:id="@+id/user_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="验证码"
                                android:inputType="number"
                                android:maxLength="6"
                                android:paddingRight="10dp"
                                android:textColor="@android:color/white"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@drawable/guess_login_cursor"
                                android:textSize="14sp" />
                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/white"></View>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/send_code"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/bg_code_login"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:id="@+id/login_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@mipmap/bg_login"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_heightPercent="12%"
                app:layout_marginTopPercent="10%"
                app:layout_textSizePercent="5%w"
                app:layout_widthPercent="70%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方登录"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_marginBottomPercent="7%"
                app:layout_marginTopPercent="8%"
                app:layout_textSizePercent="4%w" />

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="80%">

                <ImageView
                    android:id="@+id/sino_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/microblog_login" />

                <ImageView
                    android:id="@+id/weachat_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/wechat_login" />

                <ImageView
                    android:id="@+id/qq_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@mipmap/qq_login" />
            </com.zhy.android.percent.support.PercentFrameLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/bg_explain_login"
        android:alpha="0.6"
        android:gravity="center"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即同意猜猜看"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_textSizePercent="4%w" />

            <TextView
                android:id="@+id/login_user_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户服务协议"
                android:textColor="#FFFF00"
                app:layout_textSizePercent="4%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us_telephone"
            android:textColor="@android:color/white"
            app:layout_marginRightPercent="2%"
            app:layout_textSizePercent="4%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
