<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    app:layout_marginLeftPercent="5%"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:minHeight="75dp"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/convert_details_date"
                            android:text="01-29"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/convert_details_time"
                            android:textSize="@dimen/sp_14"
                            android:text="18:08"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                app:layout_marginLeftPercent="7%"
                app:layout_paddingRightPercent="5%"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:minHeight="75dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/convert_details_price"
                    android:text="-1500"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/actionBar_title"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/convert_details_reason"
                    android:textSize="@dimen/sp_12"
                    android:text="手机充值：￥100"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/none_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:id="@+id/convert_details_bottom_line"
        android:layout_width="match_parent"
        app:layout_marginLeftPercent="5%"
        android:background="@color/bottom_line_color"
        android:layout_height="0.5dp"></View>
</com.zhy.android.percent.support.PercentLinearLayout>
