<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_more"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/share_pop_btn"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="40dp">

        <ImageView
            android:src="@mipmap/share_home"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:text="分享好友"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:layout_width="120dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bottom_line_color"
        android:layout_height="0.5dp"></View>

    <FrameLayout
        android:id="@+id/new_pop_btn"
        android:layout_width="120dp"
        android:layout_height="40dp">

        <ImageView
            android:src="@mipmap/new_home"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:text="新建题目"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:layout_width="120dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bottom_line_color"
        android:layout_height="0.5dp"></View>

    <FrameLayout
        android:id="@+id/report_pop_btn"
        android:layout_width="120dp"
        android:layout_height="40dp">

        <ImageView
            android:src="@mipmap/report_home"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:text="投诉举报"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>
