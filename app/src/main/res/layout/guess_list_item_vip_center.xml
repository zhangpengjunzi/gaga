<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/btn_background_selector"
    android:layout_height="wrap_content">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/setting_award_height">
                <ImageView
                    android:id="@+id/vip_center_item_image"
                    android:layout_width="wrap_content"
                    app:layout_marginLeftPercent="5%"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/vip_center_item_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    app:layout_marginLeftPercent="8%"
                    android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <View
            android:id="@+id/vip_bottom_line"
            android:layout_width="match_parent"
            app:layout_marginLeftPercent="5%"
            android:background="@color/bottom_line_color"
            android:layout_height="0.5dp"></View>
</LinearLayout>
