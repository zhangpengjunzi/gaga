<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_info_linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/guess_common_layout_titleview"></include>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_heightPercent="40%"
            app:layout_paddingBottomPercent="5%"
            app:layout_paddingLeftPercent="5%"
            app:layout_paddingRightPercent="5%"
            app:layout_paddingTopPercent="5%">

            <EditText
                android:id="@+id/create_describe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:gravity="top"
                android:maxLength="100"
                android:textSize="@dimen/send_info_size"
                android:hint="精彩的描述将带来更多的竞猜..."
                app:layout_heightPercent="40%" />

            <ImageView
                android:id="@+id/create_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:layout_gravity="left|bottom"
                app:layout_heightPercent="35%h"
                app:layout_widthPercent="35%h" />

            <TextView
                android:id="@+id/edit_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:text="100" />
        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:layout_marginTopPercent="1.5%"
            app:layout_paddingLeftPercent="5%">

            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/guess_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_center_height"
                app:layout_paddingRightPercent="5%">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@mipmap/option_publish"
                        android:layout_width="wrap_content"
                        app:layout_marginRightPercent="5%"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="竞猜选项"
                        android:textSize="@dimen/actionBar_title"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/select_text"
                        android:text="未设置"
                        android:textSize="@dimen/send_info_size"
                        android:layout_width="wrap_content"
                        app:layout_marginRightPercent="2%"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/foward_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentFrameLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/bottom_line_color"
                android:layout_height="0.5dp"></View>

            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/guess_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_center_height"
                app:layout_paddingRightPercent="5%">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@mipmap/label_publish"
                        android:layout_width="wrap_content"
                        app:layout_marginRightPercent="5%"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="内容标签"
                        android:textSize="@dimen/actionBar_title"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/content_text"
                        android:text="未选择"
                        android:textSize="@dimen/send_info_size"
                        android:layout_width="wrap_content"
                        app:layout_marginRightPercent="2%"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/foward_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentFrameLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/bottom_line_color"
                android:layout_height="0.5dp"></View>

            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/guess_award"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_center_height"
                app:layout_paddingRightPercent="5%">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@mipmap/odds_publish"
                        android:layout_width="wrap_content"
                        app:layout_marginRightPercent="5%"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="开奖条件"
                        android:textSize="@dimen/actionBar_title"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/award_text"
                        android:text="未设置"
                        android:textSize="@dimen/send_info_size"
                        android:layout_width="wrap_content"
                        app:layout_marginRightPercent="2%"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/foward_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentFrameLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/pay_center_height">
            <ImageView
                android:id="@+id/publish_help_btn"
                app:layout_paddingLeftPercent="5%"
                app:layout_paddingBottomPercent="3%"
                app:layout_paddingTopPercent="3%"
                app:layout_paddingRightPercent="3%"
                android:src="@mipmap/help_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</LinearLayout>
